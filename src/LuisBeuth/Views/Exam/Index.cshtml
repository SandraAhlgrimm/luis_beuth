@model IEnumerable<luis_beuth.Models.Data.Exam>

@{
    ViewData["Title"] = "Klausuren";
}

<h2>Liste der Klausuren</h2>

<p>
    <a asp-action="Create">Neue Klausur anlegen</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            @*<snippet_1>*@
            <td class="text-right">
                <div class="btn-group" role="group">
                    <a class="btn btn-xs btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                    <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </div>
                <!--<a asp-action="Edit" asp-route-id="@item.Id">Editieren</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">LÃ¶schen</a>-->
            </td>
            @*</snippet_1>*@
        </tr>
}
    </tbody>
</table>