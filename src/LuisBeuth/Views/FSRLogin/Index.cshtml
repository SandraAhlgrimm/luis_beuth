@model IEnumerable<luis_beuth.Models.Data.Login>

@{
    ViewData["Title"] = "Passwort";
}

<h2>Liste der Passwörter</h2>

<p>
  <a asp-action="Create">Neues anlegen</a>
</p>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Id)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.PasswordHash)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Created)
    </th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.PasswordHash)
        </td>
        @*<snippet_1>*@
        <td class="text-right">
          <div class="btn-group" role="group">
            <a class="btn btn-xs btn-primary" asp-action="Edit" asp-route-id="@item.Id">
              <i class="glyphicon glyphicon-pencil"></i>
            </a>
            <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.Id">
              <i class="glyphicon glyphicon-trash"></i>
            </a>
          </div>
          <!--<a asp-action="Edit" asp-route-id="@item.Id">Editieren</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">Löschen</a>-->
        </td>
        @*</snippet_1>*@
      </tr>
  }
  </tbody>
</table>